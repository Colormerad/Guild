@model GuildCars.Models.SalesReportQueryViewModel
@{
    ViewBag.Title = "Sales";
}

    <div class="col-sm-12 col-md-12 col-lg-12">
        <h2>Sales</h2>
        <div class=" elementContainer col-sm-12 col-md-12 col-lg-12">
            <p><strong>Filters</strong></p>
            
                <fieldset>
                    <div>
                        <div class="form-group col-md-12 col-lg-12 ">

                            <div class="form-group col-md-1 col-lg-1">
                                <p>User:</p>
                            </div>
                            <div class="form-group col-md-3 col-lg-3">
                                @Html.DropDownListFor(m => m.Id, Model.reportsList)
                            </div>
                            <div class="form-group col-md-1 col-lg-1">
                                <p class="">From Date:</p>
                            </div>
                            <div class="form-group col-md-3 col-lg-3">
                                <input id="FromDate" name="FromDate" class="form-control">
                            </div>
                            <div class="form-group col-md-1 col-lg-1">
                                <p class="">To Date:</p>
                            </div>
                            <div class="form-group col-md-3 col-lg-3">
                                <input id="ToDate" name="ToDate" class="form-control ">
                            </div>

                        </div>
                    </div>

                    <div class="form-group col-sm-4 col-md-4 col-lg-4 ">
                        <input id="submitSearchOrdersButton" name="submitSearchOrdersButton" value="Submit" class="btn btn-primary btn-block">
                    </div>
                </fieldset>
           
        </div>
        <div class=" col-sm-12 col-md-6 col-lg-6">
            <p><strong>Search Results</strong></p>
            <table class="table table-bordered table-striped" id="SalesResultsTable">
                <thead class="thead-dark">
                    <tr>
                        <th scope="col">User</th>
                        <th scope="col">Total Sales</th>
                        <th scope="col">Total Vehicles</th>
                    </tr>
                </thead>
                <tbody>
                </tbody>
            </table>
        </div>
        <script src="~/Scripts/jquery-2.2.3.min.js"></script>
        <script src="~/Scripts/dataService.js"></script>
        <script src="~/Scripts/home.js"></script>
    </div>



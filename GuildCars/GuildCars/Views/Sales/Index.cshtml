@model GuildCars.Models.VehicleSearchViewModel
@{
    ViewBag.Title = "Index";
}
<div>
    <h2>Sales</h2>
    <div class="elementContainer col-lg-12 col-md-12">
        <h3>Quick Search</h3>
        
        <form>
            <div class="col-md-4 col-sm-12">
                <input id="searchinput" name="searchinput" type="search" placeholder="Enter make, model, or year" class="form-control input-md">
            </div>
            <div class=" form-inline col-md-4 col-sm-12">
                <div>
                    <b>Price: </b>
                    <select id="minPrice" name="minPrice" class="form-control input-xs">
                        <option value="-1">No Min</option>
                        <option value="500">$500</option>
                        <option value="1000">$1000</option>
                        <option value="2000">$2000</option>
                        <option value="5000">$5000</option>
                    </select>
                    <select id="maxPrice" name="maxPrice" class="form-control input-xs">
                        <option value="-1">No Max</option>
                        <option value="1000">$1000</option>
                        <option value="2000">$2000</option>
                        <option value="5000">$5000</option>
                        <option value="10000">$10000</option>
                    </select>
                </div>
            </div>
            <div class=" form-inline col-md-4 col-sm-12">
                <div>
                    <b>Year: </b>
                    <select id="minYear" name="minYear" class="form-control input-xs">
                        <option value="-1">No Min</option>
                        <option value="1800">1800</option>
                        <option value="2010">2010</option>
                        <option value="2015">2015</option>
                        <option value="2019">2019</option>
                        <option value="2020">2020</option>
                    </select>

                    <select id="maxYear" name="maxYear" class="form-control input-xs">
                        <option value="-1">No Max</option>
                        <option value="1900">1900</option>
                        <option value="2010">2010</option>
                        <option value="2015">2015</option>
                        <option value="2020">2020</option>
                    </select>
                </div>
            </div>
            <br />
            <div class="form-group">
                <label class="control-label" for="searchNew"></label>
                <div class="col-lg-offset-4 searchButton">
                    <input id="submitAllButton" name="submitAllButton" value="Submit" class="btn btn-primary">
                    <input id="reset" name="clearButton" value="Clear Form" type="reset" class="btn btn-primary">
                </div>
            </div>
        </form>

        </div>
    </div> 
    
        <h2>Search Results</h2>
        <table class="table table-bordered table-striped" id="vehicleTableSales">
            <tbody>
            </tbody>
        </table>
        <script src="~/Scripts/jquery-2.2.3.min.js"></script>
        <script src="~/Scripts/dataService.js"></script>
        <script src="~/Scripts/home.js"></script>
</div>
    
  

    